<h1 class="fst-italic fw-bold text-center" style="color:white;font-size:45px;">Login</h1>

<div class="panel default-panel rounded mx-auto" style="padding-bottom:15px;padding-left:20px;padding-top:10px;padding-right:20px; background-color:rgb(187, 187, 186);margin-top:50px; width:40%;">
    <form action="/login" method="POST" class="mt-3 mx-auto" style="margin-top:0;">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" class="form-control" required>
        </div>
        <div class="row" style="margin-top:30px;margin-bottom:10px;">
            <div class="col">
                <button type="submit" class="text-start btn btn-primary">Login</button>
            </div>
            <div class="col text-end" style="padding-top:5px;">
                <a href="/register" style="color:black;margin:0;">Register</a>
            </div>
        </div>
    </form>
</div>

{{#if error}}
    <h1 class="fst-italic fw-bold text-center" style="margin-top:20px;color:white;font-size:25px;">
        {{error}}
    </h1>
{{/if}}
