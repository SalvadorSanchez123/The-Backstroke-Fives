<h1 class="fst-italic fw-bold text-center" style="color:white;font-size:45px;">Search Album</h1>

<div class="row">
    <div class="col" style="position:fixed;top:35%;left:0.5%;max-width:25%;">
        <div class="panel default-panel rounded mx-auto" style="padding-bottom:15px;padding-left:20px;padding-top:10px;padding-right:20px; background-color:rgb(187, 187, 186);margin-top:50px; width:90%;">
            <form action="/search/results" method="GET" class="mt-3 mx-auto" style="margin-top:0;">
                <div class="form-group">
                    <label for="artist">Artist:</label>
                    <input type="text" id="artist" name="artist" class="form-control">
                </div>
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" class="form-control">
                </div>
                <div class="form-group">
                    <label for="country">Country:</label>
                    <input type="text" id="country" name="country" class="form-control">
                </div>
                <div class="form-group">
                    <label for="year">Year:</label>
                    <input type="year" id="year" name="year" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top:30px;margin-bottom:10px;">Search</button>
            </form>
        </div>
    </div>

    <div class="col" style="padding-left:0;padding-right:2%;margin-left:420px;">
        {{#if results}}
            <div class="row" style="margin-top:40px;">
                {{#each results}}
                    <div class="panel default-panel rounded mx-auto" style="padding-bottom:15px;padding-left:20px;padding-top:15px;padding-right:20px; background-color:rgb(187, 187, 186);margin-bottom:20px;margin-left:5px !important;width:fit-content;">
                        <div class="row g-0">
                            <div class="col-auto" style="padding-right:5px;">
                                <b>{{increment @index}}.</b>
                            </div>
                            <div class="col-auto">
                                <a href="/reviews/getadd/{{this.discogsId}}">
                                    <img src={{this.albumArtUrl}} style="width:100px;height:100px;">
                                </a>
                            </div>
                            <div class="col text-start" style="padding-left:5px;margin:0;font-size:15px;">
                                <p><b>
                                    <b>{{this.title}}</b>
                                    <br>{{this.artist}}
                                    <br>{{this.year}}
                                    <br>{{this.country}}
                                    <br>{{this.genre}}
                                </b></p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <h1 class="fst-italic fw-bold" style="color:white;font-size:45px;margin-top:20%;padding-left:33%;">No Results</h1>
        {{/if}}
    </div>
</div>