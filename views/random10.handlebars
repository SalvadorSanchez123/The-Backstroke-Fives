<h2 class="fst-italic fw-bold" style="font-size:35px;padding-left:10px;padding-bottom:10px;">
    <div class="row">
        <div class="col text-start" style="color:white;">
            Random 10 Well Rated Albums
        </div>
        <div class="col text-end" style="margin-right:1%;">
            <a href="/random10" style="color:black;">Generate New 10</a>
        </div> 
    </div>
</h2>

<div class="row" style="margin-top:40px;">
    {{#each randList}}
        <div class="panel default-panel rounded mx-auto" style="padding-bottom:15px;padding-left:20px;padding-top:15px;padding-right:20px; background-color:rgb(187, 187, 186);margin-bottom:20px; width:fit-content;">
            <div class="row g-0">
                <div class="col-auto" style="padding-right:5px;">
                    <b>{{increment @index}}.</b>
                </div>
                <div class="col-auto">
                    <a href="/albums/reviews/{{this.id}}">
                        <img src={{this.albumArtUrl}} style="width:100px;height:100px;">
                    </a>
                </div>
                <div class="col text-start" style="padding-left:5px;margin:0;font-size:15px;">
                    <p><b>
                        {{this.totalRating}}/10
                        <br><b>{{this.title}}</b>
                        <br>{{this.artist}}
                        <br>{{this.year}}
                    </b></p>
                </div>
            </div>
        </div>
    {{/each}}
</div>