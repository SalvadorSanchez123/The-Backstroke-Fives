{{#if album}}
    <div class="row">
        <div class="col-6 text-center" style="width:fit-content;margin-left:1%;">
            {{#with album}}
                <img src={{albumArtUrl}} class="text-center" style="margin-top:20px;margin-bottom:10px;width:400px;height:400px;">
                <div>
                    <div class="panel default-panel rounded text-start mx-auto" style="width:400px;background-color:rgb(187, 187, 186);padding-left:10px;padding-right:10px;">
                        <div class="row" style="padding-bottom:7px;">
                            <p class="text-start" style="margin:0;">
                                <b>{{title}}</b>
                                <br>{{artist}}
                                <br>{{year}}
                                <br>{{genre}}
                            </p>
                        </div>
                    </div>
                </div>
            {{/with}}
        </div>

        <div class="col" style="padding-right:2%;">
            <div class="panel default-panel rounded mx-auto" style="padding-bottom:15px;padding-left:20px;padding-top:10px;padding-right:20px; background-color:rgb(187, 187, 186);margin-top:50px;width:80%;">
                <form action="/reviews/add/{{album.discogsId}}" method="POST" class="mt-3 mx-auto" style="margin-top:0;">
                    <div class="form-group">
                        <label for="starRating">Star Rating:
                            <pre style="color:black;font-size: 11px;"><b>Only whole or half stars. No zero stars (e.g. 1, 6.5, 10)</b></pre>
                        </label>
                        <input pattern="(^[1-9]{1}$)|(10)|(^[1-9]{1}\.5$)" type="text" id="starRating" name="starRating" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="comment">Comment:</label>
                        <textarea type="text" id="comment" name="comment" class="form-control" rows="10" cols="100"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin-top:30px;margin-bottom:10px;">Add Review</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <h1 class="fst-italic fw-bold text-center" style="color:white;font-size:45px;margin-top:15%;">{{message}}</h1>
{{/if}}